generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Link {
  id        String   @id @default(cuid())
  slug      String   @unique
  url       String
  title     String?
  createdAt DateTime @default(now())
  clicks    Click[]
}

model Click {
  id        String   @id @default(cuid())
  linkId    String
  link      Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)
  timestamp DateTime @default(now())
  userAgent String?
  referer   String?
  country   String?
}
